{
  "name": "field-guide",
  "version": "2.4.0",
  "description": "a fully-functional, static site implementation of a design system documentation site",
  "keywords": [
    "prember-plugin",
    "empress",
    "field-guide"
  ],
  "repository": "https://github.com/empress/field-guide",
  "license": "MIT",
  "author": "Chris Manson <chris@manson.ie>",
  "bin": "./cli.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "exports": {
    "./babel.config.cjs": "./babel.config.cjs",
    "./tests/*": "./tests/*",
    "./*": "./app/*"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "changelog": "auto-changelog --template changelog.template --unreleased-only --prepend --load-github-issue-data --github-cache-dir .changelog",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "concurrently \"npm:lint:css -- --fix\"",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\" --prefixColors auto && npm run format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "concurrently \"npm:lint\" \"npm:test:*\" --names \"lint,test:\"",
    "test:ember": "ember test",
    "ember-compatibility-test": "ember try:each"
  },
  "dependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/runtime": "^7.27.1",
    "@embroider/compat": "^4.0.0-alpha.0",
    "@embroider/config-meta-loader": "^1.0.0-alpha.0",
    "@embroider/core": "^4.0.0-alpha.0",
    "@embroider/macros": "^1.16.12",
    "@embroider/router": "^3.0.1",
    "@embroider/vite": "^1.0.0-alpha.0",
    "@glimmer/component": "^2.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "babel-plugin-ember-template-compilation": "^2.4.1",
    "broccoli-funnel": "^3.0.3",
    "broccoli-merge-trees": "^4.2.0",
    "broccoli-plugin": "^4.0.7",
    "broccoli-static-site-json": "^4.4.1",
    "commander": "^13.1.0",
    "decorator-transforms": "^2.3.0",
    "ember-auto-import": "^2.7.2",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-head": "^2.0.0",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-cli-showdown": "^9.0.1",
    "ember-cli-string-utils": "^1.1.0",
    "ember-html-excerpt": "^1.0.1",
    "ember-meta": "^2.0.0",
    "ember-modifier": "^4.2.0",
    "ember-prism": "^0.13.0",
    "ember-styleguide": "link:../../../ember/ember-styleguide",
    "empress-blueprint-helpers": "^1.2.1",
    "execa": "^9.5.3",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "resolve": "^1.17.0",
    "showdown": "^2.1.0",
    "vite": "^6.3.4",
    "walk-sync": "^2.2.0"
  },
  "peerDependencies": {
    "ember-cli": "*",
    "ember-source": "*"
  },
  "peerDependenciesMeta": {
    "ember-cli": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@ember/optional-features": "^2.1.0",
    "@ember/test-helpers": "^3.3.0",
    "@embroider/test-setup": "^3.0.3",
    "@eslint/js": "^9.23.0",
    "@glimmer/tracking": "^1.1.2",
    "auto-changelog": "github:mansona/auto-changelog#epic",
    "broccoli-asset-rev": "^3.0.0",
    "concurrently": "^8.2.2",
    "ember-cli": "~5.8.1",
    "ember-cli-clean-css": "^3.0.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-load-initializers": "^3.0.1",
    "ember-page-title": "^8.2.3",
    "ember-qunit": "^8.0.2",
    "ember-resolver": "^13.1.0",
    "ember-source": "6.4.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^5.13.0",
    "ember-test-selectors": "^6.0.0",
    "ember-try": "^3.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ember": "^12.5.0",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-qunit": "^8.1.2",
    "field-guide-default-template": "^2.0.0",
    "lint-to-the-future": "^0.6.0",
    "lint-to-the-future-eslint": "^0.2.1",
    "loader.js": "^4.7.0",
    "prember": "^2.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-ember-template-tag": "^2.0.4",
    "qunit": "^2.20.1",
    "qunit-dom": "^2.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.1.0",
    "webpack": "^5.91.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "paths": [
      "lib/builder"
    ]
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "pnpm": {
    "overrides": {
      "ember-get-config": "github:mansona/ember-get-config#config-meta-loader",
      "ember-source": "~6.4.0",
      "ember-styleguide": "link:../../../ember/ember-styleguide"
    },
    "patchedDependencies": {
      "field-guide-default-template@2.0.0": "patches/field-guide-default-template@2.0.0.patch",
      "ember-source@6.4.0": "patches/ember-source@6.4.0.patch",
      "@embroider/vite": "patches/@embroider__vite.patch"
    }
  }
}
